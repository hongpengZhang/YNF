<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    >
    <include
        layout="@layout/title_setting"
        android:layout_width="match_parent"
        android:layout_height="120px" />

    <!--分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="30px"
        android:background="#EEEEEE" />

    <LinearLayout
        android:paddingTop="20px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/locate_title"
        android:orientation="vertical">
        <!--购物须知-->
        <LinearLayout
            android:background="@drawable/mine_item_bg"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="40px">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="购物须知"
                android:textSize="40px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/next_icon" />
        </LinearLayout>
        <!--分割线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cfcfcf" />

        <!--意见反馈-->
        <LinearLayout
            android:background="@drawable/mine_item_bg"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="40px">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="意见反馈"
                android:textSize="40px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/next_icon" />
        </LinearLayout>
        <!--分割线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cfcfcf" />
        <!--清除缓存-->
        <LinearLayout
            android:background="@drawable/mine_item_bg"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="40px">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="清除缓存"
                android:textSize="40px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已缓存0M"
                android:textSize="40px" />
        </LinearLayout>
        <!--分割线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="20px"
            android:background="#EEEEEE" />
        <!--关于我们-->
        <LinearLayout
            android:background="@drawable/mine_item_bg"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="40px">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="关于我们"
                android:textSize="40px"
                android:id="@+id/textView5" />

            <ImageView
                android:layout_gravity="center"
                android:layout_width="60px"
                android:layout_height="60px"
                android:src="@mipmap/about_us_code" />

            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16px"
                android:src="@mipmap/next_icon" />
        </LinearLayout>


        <!--拨打电话-->

        <LinearLayout
            android:background="@drawable/mine_item_bg"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="40px">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="拨打电话"
                android:textSize="40px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="400-688-0900"
                android:textColor="#FC7C7E"
                android:textSize="40px" />
        </LinearLayout>
        <!--分割线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="20px"
            android:background="#EEEEEE"
            android:id="@+id/view" />

        <!--检查更新-->
        <LinearLayout
            android:background="@drawable/mine_item_bg"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="40px">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="检查更新"
                android:textSize="40px" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="20px"
            android:background="#EEEEEE"
             />
        <Button
            android:visibility="gone"
            android:layout_marginTop="200px"
            android:id="@+id/but_unlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120px"
            android:layout_marginRight="120px"
            android:background="@drawable/login_but_selector"
            android:text="退出登录"
            android:textColor="@color/colorWrite" />
    </LinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <include layout="@layout/title_setting" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:scrollbars="none">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:orientation="vertical"
            android:paddingBottom="190px">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="30px"
                android:background="#F9F9F9" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:focusable="true"
                android:id="@+id/dd_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30px">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/address" />

                <TextView
                    android:id="@+id/display_tv"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="100px"
                    android:text="请填写收货地址"
                    android:lines="2"
                    android:textColor="#323232"
                    android:textSize="45px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/order_confirm_next_icon" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30px"
                android:background="#F9F9F9" />

            <bw.com.yunifangstore.view.MyListView
                android:id="@+id/dd_listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20px"
                android:listSelector="#fff" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#ccc" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/dd_top_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20px"
                    android:layout_marginTop="20px"
                    android:text="共计0件商品  总计：￥0.00"
                    android:textColor="#323232"
                    android:textSize="40px" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20px"
                android:layout_marginTop="30px"
                android:background="#F9F9F9" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="30px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="配送方式"
                    android:textColor="#323232"
                    android:textSize="40px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@mipmap/order_confirm_next_icon"
                    android:text="包邮  "
                    android:textColor="#323232"
                    android:textSize="40px" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#ccc" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="30px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="满额立减"
                    android:textColor="#323232"
                    android:textSize="40px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@mipmap/order_confirm_next_icon"
                    android:text="-0.00元  "
                    android:textColor="@color/colorAccent"
                    android:textSize="40px" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#ccc" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="30px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="使用现金券"
                    android:textColor="#323232"
                    android:textSize="40px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@mipmap/order_confirm_next_icon"
                    android:text="-0.00元  "
                    android:textColor="@color/colorAccent"
                    android:textSize="40px" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#ccc" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="30px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可用500个御泥坊积分抵￥5.00"
                    android:textColor="#323232"
                    android:textSize="40px" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:button="@null" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#ccc" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="30px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商城满减"
                    android:textColor="#323232"
                    android:textSize="40px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@mipmap/order_confirm_next_icon"
                    android:text="不满足满减  "
                    android:textColor="@color/colorAccent"
                    android:textSize="40px" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="300px"
                android:layout_margin="15px"
                android:background="@drawable/et_bg"
                android:gravity="top"
                android:hint="给卖家留言(255字以内)"
                android:maxLength="255"
                android:padding="30px"
                android:textColor="#323232" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20px"
                android:layout_marginTop="30px"
                android:background="#F9F9F9" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20px"
                android:layout_marginTop="30px"
                android:background="#F9F9F9" />

            <!--<include layout="@layout/pay_view" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="20px"
                android:text="支付方式"
                android:textColor="#323232" />


            <!--支付宝支付-->
            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/dd_ali_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="130px"
                    android:layout_height="130px"
                    android:padding="20px"
                    android:src="@mipmap/icon_alipay" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="支付宝支付"
                    android:textColor="#323232" />

                <CheckBox
                    android:id="@+id/ali_pay_che"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    android:button="@null"
                    android:checked="true"
                    android:drawableRight="@drawable/sopping_check"
                    android:padding="20px" />
            </com.zhy.autolayout.AutoLinearLayout>
            <!--微信支付-->
            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/dd_wx_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="130px"
                    android:layout_height="130px"
                    android:padding="20px"
                    android:src="@mipmap/icon_wxpay" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="微信支付"
                    android:textColor="#323232" />

                <CheckBox
                    android:id="@+id/wx_pay_che"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    android:button="@null"
                    android:drawableRight="@drawable/sopping_check"
                    android:padding="20px" />

            </com.zhy.autolayout.AutoLinearLayout>


        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#ccc" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/all_select_goods"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:orientation="horizontal"
        android:padding="15px"
        android:visibility="visible">


        <TextView
            android:id="@+id/dd_sum_price"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="20px"
            android:text="共计：￥0.00"
            android:textColor="@color/colorTextMain" />

        <Button
            android:id="@+id/dd_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/login_but_selector"
            android:text="付款"
            android:onClick="Alipay"
            android:textColor="@color/colorWrite" />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>



<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:scrollbars="none">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/mine_backgrund"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/user_center_bg" />

        <ImageButton
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="20px"
            android:background="@drawable/locate_selector"
            android:padding="30px" />

        <TextView
            android:id="@+id/tv_adresss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:drawableLeft="@drawable/wait_send"
            android:drawablePadding="10px"
            android:text="收货地址:"
            android:textSize="40px" />

        <TextView
            android:id="@+id/dizhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_adresss"
            android:layout_marginTop="10px"
            android:text="地址"
            android:textColor="#F7F7F7"
            android:textSize="45px" />

        <bw.com.yunifangstore.view.CircleImageView
            android:id="@+id/user_icon"
            android:layout_width="240px"
            android:layout_height="240px"
            android:layout_alignBottom="@id/mine_backgrund"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/user_icon_no_set" />

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_icon"
            android:layout_marginTop="10px"
            android:gravity="center"
            android:text="红脩"
            android:textSize="40px"
            android:visibility="gone" />

        <TextView
            android:id="@+id/login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20px"
            android:background="@mipmap/login_btn_bg"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/logincolor"
            android:textSize="40px" />

        <RadioGroup
            android:id="@+id/mine_radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_btn"
            android:layout_marginTop="40px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/wait_pay"
                android:gravity="center_horizontal"
                android:text="待付款" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/wait_send"
                android:gravity="center_horizontal"
                android:text="待发货" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/wait_receive"
                android:gravity="center_horizontal"
                android:text="待收货" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/wait_evaluate"
                android:gravity="center_horizontal"
                android:text="待评价" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/wait_refund"
                android:gravity="center_horizontal"
                android:text="退款" />
        </RadioGroup>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mine_radioGroup"
            android:layout_marginTop="20px"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#EEEEEE" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/myorder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mine_item_bg"
                android:clickable="true"
                android:padding="40px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:drawableLeft="@mipmap/my_order_icon"
                    android:drawablePadding="20px"
                    android:gravity="center"
                    android:text="我的订单" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10px"
                    android:src="@mipmap/next_icon" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20px"
                android:background="#EEEEEE" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mine_item_bg"
                android:clickable="true"
                android:padding="40px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:drawableLeft="@mipmap/my_invite_gift_icon"
                    android:drawablePadding="20px"
                    android:gravity="center"
                    android:text="邀请有礼" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10px"
                    android:src="@mipmap/next_icon" />

            </com.zhy.autolayout.AutoRelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#EEEEEE" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mine_item_bg"
                android:clickable="true"
                android:padding="40px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:drawableLeft="@mipmap/my_face_test_icon"
                    android:drawablePadding="20px"
                    android:gravity="center"
                    android:text="刷脸测尺寸" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10px"
                    android:src="@mipmap/next_icon" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20px"
                android:background="#EEEEEE" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mine_item_bg"
                android:clickable="true"
                android:padding="40px">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10px"
                    android:src="@mipmap/next_icon" />

                <TextView
                    android:id="@+id/txtView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:drawableLeft="@mipmap/my_coupon_icon"
                    android:drawablePadding="20px"
                    android:gravity="center"
                    android:text="我的现金券" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#EEEEEE" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mine_item_bg"
                android:clickable="true"
                android:padding="40px">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10px"
                    android:src="@mipmap/next_icon" />

                <TextView
                    android:id="@+id/txtView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:drawableLeft="@mipmap/my_lottery_icon"
                    android:drawablePadding="20px"
                    android:gravity="center"
                    android:text="我的抽奖单" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#EEEEEE" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mine_item_bg"
                android:clickable="true"
                android:padding="40px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:drawableLeft="@mipmap/my_collection_icon"
                    android:drawablePadding="20px"
                    android:gravity="center"
                    android:text="我收藏的商品" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10px"
                    android:src="@mipmap/next_icon" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#EEEEEE" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mine_item_bg"
                android:clickable="true"
                android:padding="40px">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10px"
                    android:src="@mipmap/next_icon" />

                <TextView
                    android:id="@+id/txtView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:drawableLeft="@mipmap/personal_center_contact_service_icon"
                    android:drawablePadding="20px"
                    android:gravity="center"
                    android:text="联系客服" />
            </com.zhy.autolayout.AutoRelativeLayout>

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoRelativeLayout>

</ScrollView>
